        min-height: 990px;
        width: 100%;
        position: relative;
        //top: 100px;
        margin-top: 100px;
        left: 0;
        overflow: hidden;
        > div {
            &.banner-swiper {
                width: 100%;
                position: relative;
                ul {
                    height: auto !important;
                    li {
                        width: 100%;
                        height: auto !important;
                        a {
                            //width: 1920px;
                            height: 990px;
                            display: block;
                            /*  img {
                                  width: 1920px;
                                  height: 990px;
                                  position: relative;
                                  left: 50%;
                                  margin-left: -960px;
                              }*/
                        }
                    }
                }
            }
            &.bannerContent {
                width: 1200px;
                height: 350px;
                position: absolute;
                bottom: 0;
                left: 50%;
                margin-left: -600px;
                min-height: 100px;
                > span {
                    display: block;
                    position: absolute;
                    z-index: 155;
                    color: aquamarine;
                    font-size: 30px;
                    width: 40px;
                    height: 80px;
                    line-height: 80px;
                    top: -280px;
                    //margin-top: -50px;
                    background-color: rgba(0, 0, 0, .6);
                    //filter: alpha(opacity=60);
                    cursor: pointer;
                    text-align: center;
                    i {
                        display: inline-block;
                        width: 17px;
                        height: 31px;
                    }
                    &.prev {
                        left: 0;
                        i {
