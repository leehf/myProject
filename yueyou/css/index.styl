                        }
                        &:hover {
                            i {
                                background-position: 0 -42px;
                            }
                        }
                    }
                    &.next {
                        right: 0;
                        i {
                            background-position: 0 -93px;
                        }
                        &:hover {
                            i {
                                background-position: 0 -144px;
                            }
                        }
                    }
                }
                > nav {
                    position: absolute;
                    right: 0;
                    top: -40px;
                    ul {
                        float: right;
                        position: relative;

                        li {
                            float: left;
                            width: 20px;
                            height: 20px;
                            line-height: 20px;
                            margin-left: 10px;
                            cursor: pointer;
                            background: #fff;
                            text-align: center;
                            &.curr {
                                //border: 1px solid #f00;
                                a {
                                    display: inline-block;
                                    width: 10px;
                                    height: 10px;
                                    background: #e75209;
                                }
                            }
                            img {
                                width: 100%;
                                border-radius: 10%;
                            }
                        }
                    }
                }
                > div {
                    &.leftContent {
                        width: 660px;
                        height: 350px;
                        overflow: hidden;
                        position: relative;
                        .layer {
                            position: absolute;
                            width: 100%;
                            height: 100%;
                            z-index: 8;
                            cursor: pointer;
                            background: rgba(0, 0, 0, .2);
                            //filter: alpha(opacity = 50);
                        }

                        &:hover {
                            .layer {
                                z-index: 0;
                                background: none;
                            }

                        }
                        > nav {
                            position: absolute;
                            right: 10px;
                            bottom: 10px;
                            z-index: 9;
                            ul {
                                position: relative;
                                li {
                                    width: 20px;
                                    height: 20px;
                                    line-height: 20px;
                                    margin-left: 10px;
                                    cursor: pointer;
                                    background: #fff;
                                    text-align: center;
                                    &.curr {
                                        //border: 1px solid #f00;
                                        a {
                                            display: inline-block;
                                            width: 10px;
                                            height: 10px;
                                            background: #e75209;
                                        }
                                    }
                                    img {
                                        width: 100%;
                                        border-radius: 10%;
                                    }
                                }
                            }
                        }
                        div > div {
                            a {
                                display: block;
                                width: 100%;
                                height: 100%;
                                img {
                                    width: 100%;
                                    height: 100%;
                                }
                            }
                        }
                    }
                    &.rightContent {
                        width: 540px;
                        height: 350px;
                        padding: 30px 30px 30px 40px;
                        background: #282b2d;
                        > div {
                            &.title {
                                padding-bottom: 15px;
                                border-bottom: 1px solid #3d4041;
                                > h2 {
                                    height: 25px;
                                    font-size: 24px;
                                    line-height: 22px;
                                    letter-spacing: 0;
                                    color: #e75208;
                                }
                            }
                            &.detail {
                                width: 100%;
                                div {
                                    margin-top: 25px;
                                    &:not(:nth-of-type(-n+5)) {
                                        display: none;
                                    }
                                    > a {
                                        display: block;
                                        font-size: 14px;
                                        line-height: 24px;
                                        color: #c4c4c4;
                                        overflow: hidden;
                                        text-overflow: ellipsis;
                                        white-space: nowrap;
                                        &:hover {
                                            color: #fff;
                                        }
                                        > i {
                                            margin-right: 5px;
                                            display: inline-block;
                                            width: 17px;
                                            height: 17px;
                                            background-position: 0 -204px;
                                            vertical-align: text-bottom;
                                        }
                                    }
                                }
                            }
                        }

                    }
                }
            }
        }
    }
}

body {
    > article {
        width: 1200px;
        margin: 0 auto;
        padding: 40px 20px 0 20px;
        position: relative;
        background: #fff;
        min-height: 100px;
        > div {
            overflow: hidden;
            &.gameTit {
                position: relative;
                line-height: 24px;
                height: 24px;
                h2 {
                    width: 100%;
                    height: 22px;
                    font-size: 22px;
                    color: #343434;
                    position: relative;
                    padding: 0 20px;
                    line-height: 24px;
                    &:before {
                        content: "";
                        display: inline-block;
                        width: 6px;
                        height: 100%;
                        background-color: rgba(231, 82, 8, 1);
                        //filter: alpha(opacity = 50);
                        position: absolute;
                        top: 1px;
                        left: 5px;
                    }
                }
                a {
                    position: absolute;
                    right: 0;
                    top: 0;
                    color: #999;
                    font-size: 16px;
                }
            }
            &.gameContent {
                margin-top: 25px;
                ul {
                    li {
                        width: 368px;
                        height: 260px;
                        margin-bottom: 30px;
                        margin-left: 28px;
                        &:nth-of-type(3n+1) {
                            margin-left: 0;
                        }
                        &:not(:nth-of-type(-n+6)) {
                            display: none;
                        }
                        div {
                            width: 100%;
                            height: 220px;
                            position: relative;
                            cursor: pointer;
                            overflow: hidden;
                            img {
                                width: 100%;
                                height: 100%;
                            }
                            div {
                                &.fixedFooter {
                                    position: absolute;
                                    top: -220px;
                                    left: 0;
                                    width: 100%;
                                    height: 100%;
                                    padding: 20px 0 30px 0;
                                    background: rgba(0, 0, 0, .5);
                                    //filter: alpha(opacity=50);
                                    transition: 0.5s;
                                    -ms-transition: 0.5s;
                                    -moz-transition: 0.5s;
                                    -webkit-transition: 0.5s;
                                    -o-transition: 0.5s;
                                    > div {
                                        padding: 0 26px 0 20px;
                                        height: 100px;
                                        img {
                                            width: 100px;
                                            height: 100px;
                                            border-radius: 10px;
                                        }
                                        p {
                                            margin-left: 30px;
                                            margin-top: 6px;
                                            width: 192px;
                                            height: 86px;
                                            font-size: 14px;
                                            line-height: 1.5;
                                            letter-spacing: 0;
                                            color: #ffffff;
                                            overflow: hidden;
                                        }
                                        &.btn {
                                            width: 100%;
                                            height: 40px;
                                            margin-top: 30px;
                                            padding: 0 40px;
                                            text-align: center;
                                            a {
                                                display: inline-block;
                                                width: 120px;
                                                height: 40px;
                                                line-height: 40px;
                                                font-size: 14px;
                                                color: #fff;
                                                text-align: center;
                                                background: #0ebeee;
                                                border-radius: 5px;
                                                &.download {
                                                    background: #e75208;
                                                    margin-left: 30px;
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                            &:hover {
                                > div {
                                    &.fixedFooter {
                                        transition: 0.5s;
                                        -ms-transition: 0.5s;
                                        -moz-transition: 0.5s;
                                        -webkit-transition: 0.5s;
                                        -o-transition: 0.5s;
                                        top: 0;
                                    }
                                }
                            }
                        }
                        > span {
                            display: block;
                            color: #666;
                            font-size: 16px;
                            text-align: center;
                            margin: 15px 0 0 0;
                            max-height: 45px;
                            overflow: hidden;
                        }

                    }
                }
            }
        }
    }
}