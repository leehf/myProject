}

.fl {
    float: left;
}

.fr {
    float: right;
}

.hide {
    display: none;
}

.curr {
    display: block;
}

//右边热门游戏样式
.rmyx {
    width: 312px;
    div > {
        h2 {
            position: relative;
            //width: 88px;
            height: 22px;
            font-size: 22px;
            font-weight: normal;
            line-height: 24px;
            letter-spacing: 0px;
            color: #343434;
            padding-left: 15px;
            &:before {
                content: "";
                position: absolute;
                left: 0;
                width: 6px;
                height: 22px;
                background-color: rgba(231, 82, 8, 1);
            }
        }
        ul {
            width: 100%;
            margin-top: 20px;
            li {
                width: 312px;
                height: 200px;
                margin-top: 20px;
                a {
                    display: block;
                    width: 312px;
                    height: 200px;
                    overflow: hidden;
                    position: relative;
                    img {
                        width: 312px;
                        height: 200px;
                        transition: 1s;
                        -webkit-transition: 1s;
                        -moz-transition: 1s;
                        -o-transition: 1s;
                        -ms-transition: 1s;
                    }
                    > div {
                        &.lay {
                            background: none;
                        }
                    }
                    &:hover {
                        > div {
                            &.lay {
                                width: 100%;
                                height: 200px;
                                position: absolute;
                                left: 0;
                                top: 0;
                                background: rgba(0, 0, 0, .1);
                            }
                        }
                        img {
                            transform: scale(1.43);
                            -webkit-transform: scale(1.43);
                            -moz-transform: scale(1.43);
                            -o-transform: scale(1.43);
                            -ms-transform: scale(1.43);
                            transition: 1s;
                            -webkit-transition: 1s;
                            -moz-transition: 1s;
                            -o-transition: 1s;
                            -ms-transition: 1s;
                        }
                    }
                }
            }
        }
    }
}

.fid {
    position: fixed;
    top: 110px;
    margin: 0 0 !important;
    z-index: 9;
    > ul {
        > li {
            &:not(:nth-of-type(-n+2)) {
                display: none;
            }
        }
    }
}