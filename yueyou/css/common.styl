* {
    padding: 0 0;
    margin: 0 0;
    outline: none;
    box-sizing: border-box; //盒子模式，看个人习惯
}

html, body {
    background: #f6f7fb;
    font: 14px "Microsoft YaHei", "微软雅黑", sans-serif;
}

a {
    text-decoration: none;
    color: inherit;
    outline: 0;
}

img {
    border: none;
    vertical-align: middle;
}

ul, li {
    list-style: none;
}

.clearfix:after {
    content: "";
    display: table;
    clear: both;
}

.background-icon {
    background: url("../img/icon.png") no-repeat;
}

//header 头部导航栏
.header {
    width: 100%;
    background: #fff;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 156;
    border-bottom: 2px solid #e75208;
}

.secHeader {
    width: 1200px;
    margin: 0 auto;
    height: 100px;
}

.logo {
    margin: 0 0 0 0;
    display: block;
    float: left;
    line-height: 100px;
}

.logo img {
    vertical-align: middle;
}

.header ul {
    float: right;
}

.header ul li {
    float: left;
    margin: 25px 18px 0;
    line-height: 24px;
    margin-right: 8px;
    min-width: 120px;
    text-align: center;
}

.header ul li a {
    width: 100%;
    display: block;
    line-height: 30px;
    color: #343434;
    font-size: 20px;
    text-align: center;
    text-decoration: none;
}

.header ul li a span {
    width: 100%;
    display: block;
    line-height: 25px;
    text-align: center;
    font-size: 14px;
    color: #676767;
}

.header .curr a, .header .curr a span {
    color: #e75209
}

.header ul li a:hover, .header ul li a:hover span {
    /*-webkit-transition: all .1s ease-out;
    transition: all .1s ease-out;
    -webkit-transform: scale(1.1);
    transform: scale(1.1);*/
    color: #e75209
}

