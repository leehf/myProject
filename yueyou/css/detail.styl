body > div {
    &.detail {
        background: #f6f7fb;
        margin-top: 100px;
        overflow: hidden;
        min-height: 700px;
        > div {
            a {
                display: block;
                &.img {
                    text-align: center;
                    width: 100%;
                    height: 330px;
                    background-position: center center !important;
                }
            }
            &.content {
                width: 1200px;
                margin: 0 auto;
                margin-top: 20px;
                > div {
                    &.left_content {
                        background: #fff;
                        width: 860px;
                        padding-top: 40px;
                        h2 {
                            padding: 0 23px;
                            text-align: center;
                            max-height: 64px;
                            font-size: 24px;
                            font-weight: normal;
                            line-height: 30px;
                            letter-spacing: 0;
                            color: #333333;
                            overflow: hidden;
                            /*  text-overflow: ellipsis;
                              white-space: nowrap;*/
                        }
                        > p {
                            text-align: center;
                            font-size: 14px;
                            color: #999;
                            margin-top: 30px;
                            span {
                                display: inline-block;
                                font-size: 14px;
                                color: #999;
                                &.time {
                                    margin-right: 30px;
                                }
                                &.org {
                                    margin-left: 30px;
                                }

                            }
                        }
                        > div {
                            &.text {
                                padding: 0 23px 20px 23px;
                                margin-top: 24px;
                                * {
                                    line-height: 1.7;
                                }
                                p {
                                    overflow: hidden;
                                }
                                img {
                                    max-width: 782px;
                                    margin: 0 auto;
                                    //max-width: 100%;
                                }

                            }
                        }
                    }
                }
            }
        }
    }
}