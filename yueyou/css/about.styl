.content {
    width: 1200px;
    margin: 0 auto;
    > div {
        &.aboutTit {
            margin-top: 65px;
            position: relative;
            color: #333;
            font-size: 16px;
            /*   height: 20px;
               line-height: 20px;*/
            text-align: center;
            &:before {
                content: '';
                position: absolute;
                left: 0;
                top: 50%;
                width: 100%;
                height: 1px;
                background: #ddd;
                z-index: 1;
            }
            h2 {
                background: #fff;
                display: inline-block;
                padding-left: 20px;
                padding-right: 20px;
                font-size: 22px;
                color: #333;
                z-index: 2;
                position: relative;
                span {
                    font-weight: normal;
                    color: #999;
                    font-size: 17px;
                    display: block;
                    margin-top: 2px;
                }
            }
        }
    }
}

body > div {
    &.about {
        margin-top: 100px;
        min-height: 980px;
        background: #fff;
        width: 100%;
        padding-bottom: 30px;
        overflow: hidden;
        > div {
            a {
                display: block;
                &.img {
                    text-align: center;
                    width: 100%;
                    height: 240px;
                    background-position: center center !important;
                }
            }
            &.content {
                > div {
                    &.text {
                        width: 100%;
                        margin-top: 35px;
                        p {
                            font-size: 14px;
                            color: #666;
                            line-height: 1.7;
                        }
                    }
                    &.imgShow {
                        > div {
                            margin-top: 70px;
                            width: 290px;
                            height: 200px;
                            text-align: center;
                            overflow: hidden;
                            margin-left: 13px;
                            //cursor: pointer;
                            &:first-of-type {
                                margin-left: 0;
                            }
                            &:not(:nth-of-type(-n+4)) {
                                display: none;
                            }
                            img {
                                width: 290px;
                                height: 200px;
                                transition: 0.5s;
                                -webkit-transition: 0.5s;
                                -moz-transition: 0.5s;
                                -o-transition: 0.5s;
                                -ms-transition: 0.5s;
                                &:hover {
                                    transform: scale(1.14);
                                    -webkit-transform: scale(1.14);
                                    -moz-transform: scale(1.14);
                                    -o-transform: scale(1.14);
                                    -ms-transform: scale(1.14);
                                    transition: 0.5s;
                                    -webkit-transition: 0.5s;
                                    -moz-transition: 0.5s;
                                    -o-transition: 0.5s;
                                    -ms-transition: 0.5s;
                                }
                            }
                        }
                    }
                    &.contact {
                        margin-top: 50px;
                        ul {
                            li {
                                width: 33.333333%;
                                text-align: center;
                                color: #333;
                                padding: 0 100px;
                                box-sizing: border-box;
                                i {
                                    display: inline-block;
                                    width: 56px;
                                    height: 56px;
                                    &.address {
                                        background-position: -1px -235px;
                                    }
                                    &.contactTo {
                                        background-position: -1px -308px;
                                    }
                                    &.contactTel {
                                        background-position: -1px -391px;
                                    }
                                }
                                h3 {
                                    font-size: 18px;
                                    font-weight: normal;
                                    color: #999;
                                    margin-top: 16px;
                                    margin-bottom: 16px;
                                }
                                p {
                                    font-size: 14px;
                                    color: #333;
                                }
                            }
                        }
                    }
                }
            }
        }

    }
    &.custody {
        margin-top: 100px;
        > div {
            > a {
                display: block;
                &.img {
                    text-align: center;
                    width: 100%;
                    height: 240px;
                    background-position: center center !important;
                }
            }
            &.content {
                margin-top: 20px;
                text-indent: 2em;
                > div {
                    font-size: 14px;
                    color: #333;
                    line-height: 36px;
                    span {
                        display: inline-block;
                        width: 28px;
                        height: 10px;
                        background: url(http://dzmasset.playcrab.com/statics/dzm/www/webpub/v2/public/newsite/imgs/dot.jpg) center center no-repeat;
                    }
                    > a {
                        color: rgb(6, 154, 206);
                        font-weight: bold;
                        text-decoration: underline;
                    }
                }
                > h3 {
                    font-size: 16px;
                    color: #333;
                    line-height: 36px;
                    margin-top: 20px;
                }
            }
        }
    }
}

